</svg>

{{!-- </a> --}}
</div>
</div>
{{/each}}
</section>




<div class="paginationOptions">
  {{#if hasPrevPage}}
    <a href="/products/?page={{prevPage}}&limit={{itemsPerPage}}"><button class="button-paginate">Anterior</button></a>
  {{/if}}

  <h4 class="numberPage">{{currentPage}}</h4>

  {{#if hasNextPage}}
    <a href="/products/?page={{nextPage}}&limit={{itemsPerPage}}"><button class="button-paginate">Siguiente</button></a>
  {{/if}}
</div>



