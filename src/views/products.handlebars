</section>

<h1 class="titulo-tienda">Nuestra variedad de productos</h1>


<section class="containerProducts">
{{#each products}}
<div class="product">
<img class="product__img" src={{thumbnail}} alt="imagen de producto">
<h3 class="title-products">{{title}}</h3>
<span class="price">${{price}}</span>

<div class="btn-products">
{{!-- <a  href="#"> --}}
  
  <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" data-add="addingProduct" data-product-id="{{_id}}" class="bi bi-cart-plus" viewBox="0 0 16 16" onclick="addToCart('{{_id}}')">
